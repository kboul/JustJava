<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="mainLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/mainLinearLayoutPadding</item>
    </style>

    <style name="nameEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/txtMargin</item>
        <item name="android:hint">@string/nameEditTextHint</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:backgroundTint">@android:color/holo_green_dark</item>
    </style>

    <style name="toppingsTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/txtMargin</item>
        <item name="android:text">@string/toppingsTxt</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="whippedCreamCheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/checkBoxesPaddLeft</item>
        <item name="android:text">@string/whippedCreamCheckBox</item>
        <item name="android:textSize">@dimen/checkBoxesTextSize</item>
    </style>

    <style name="chocolateCheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/txtMargin</item>
        <item name="android:paddingLeft">@dimen/checkBoxesPaddLeft</item>
        <item name="android:text">@string/chocolateCheckBox</item>
        <item name="android:textSize">@dimen/checkBoxesTextSize</item>
    </style>

    <style name="quantityTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/txtMargin</item>
        <item name="android:text">@string/quantityTxt</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="operatorsLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="plusBtn">
        <item name="android:layout_width">@dimen/operBtnLayout</item>
        <item name="android:layout_height">@dimen/operBtnLayout</item>
        <item name="android:background">@color/mainColor</item>
        <item name="android:text">@string/plusBtnTxt</item>
        <item name="android:onClick">increment</item>
    </style>

    <style name="minusBtn">
        <item name="android:layout_width">@dimen/operBtnLayout</item>
        <item name="android:layout_height">@dimen/operBtnLayout</item>
        <item name="android:background">@color/mainColor</item>
        <item name="android:text">@string/minusBtnTxt</item>
        <item name="android:onClick">decrement</item>
    </style>

    <style name="quantityTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/quantityMarginLR</item>
        <item name="android:layout_marginRight">@dimen/quantityMarginLR</item>
        <item name="android:text">@string/quantityValueTxt</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="orderSummaryTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/txtMargin</item>
        <item name="android:layout_marginBottom">@dimen/txtMargin</item>
        <item name="android:text">@string/priceTitleTxt</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="orderSummaryTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/txtMargin</item>
        <item name="android:text">@string/priceValueTxt</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="orderBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/mainColor</item>
        <item name="android:onClick">submitOrder</item>
        <item name="android:text">@string/orderBtnTxt</item>
    </style>

</resources>
